{
  "name": "<paragraph>",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Paragraph is a web application that helps users learn English while reading the daily news.",
  "homepage_url": "https://www.paragraph.live",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js",
      "options/options.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "<paragraph>"
  },
  "options_page": "options/options.html",
  "permissions": [
    "tabs",
    "storage"
  ]
}