{
  "name": "Paragraph: Read, Learn Improve.",
  "version": "2.0.5",
  "manifest_version": 2,
  "description": "Paragraph is a web application that helps users learn a Second language while reading the daily news.",
  "homepage_url": "https://www.paragraph.live",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js",
      "options/options.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Paragraph"
  },
  "options_page": "options/options.html",
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}